<div class="blog-post-card">
    <a class="post-link" href="{{url}}" >
        <div class="post-card-image">
            <img data-srcset="{{> srcset}}"
                data-sizes="auto" src="{{img_url feature_image size="s"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
        </div>
        <div class="post-card-meta">
            <h2 class="blog-feed-title">{{title}}</h2>
            <span class="post-caption-meta-item post-caption-meta-date">
            <time datetime="{{date format="YYYY-MM-DD"}}">{{date published_at}}</time>
            </span>
            <div class="blog-feed-excerpt">{{excerpt words="24"}}...</div>
        </div>
    </a>
        
</div>