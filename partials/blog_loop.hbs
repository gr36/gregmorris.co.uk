<div class="blog-post-card">
    {{^if canonical_url}}
        <div class="post-card-image">
            <a class="post-card-image-wrap" href="{{url}}" style="background-image:url({{img_url feature_image size="s"}})"></a>
        </div>
    {{/if}}    

            <div class="post-card-info">
                {{#if canonical_url}}
                <h2 class="link-post-title"><a href="{{canonical_url}}">{{title}} &#8594;</h2></a>
                <div class="blog-post-content">{{content}}</div>
                <div class="link-post-meta">
                <time datetime="{{date format="YYYY-MM-DD"}}">Linked on {{date published_at}}</time><a href="{{url}}">  &#9733;</a>
                </div>
                {{else}}
                <h2 class="blog-post-title"><a href="{{url}}">{{title}}</h2></a>
                <div class="blog-post-meta">
                <time datetime="{{date format="YYYY-MM-DD"}}">Posted on {{date published_at}}</time>
                </div>
                <div class="blog-post-excerpt">{{excerpt}}</div>
                <div class="continue-reading"><a href="{{url}}">Continue Reading...</a></div>
               {{/if}}
            </div>

</div>
<span class="separator"><span class="divider"></span></span>