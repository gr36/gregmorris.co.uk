<div class="blog-post-card">
    {{#if feature_image}}
        <div class="post-card-image">
            <a class="post-card-image-wrap" href="{{url}}" style="background-image:url({{img_url feature_image size="s"}})"></a>
        </div>
    {{/if}}
    
        <a href="{{url}}">
            <div class="post-card-info">
                {{#if canonical_url}}
                <h2 class="blog-post-title"><a href="{{canonical_url}}">{{title}} &#8594;</h2></a>
                <div class="blog-post-excerpt">{{content}}</div>
                <span class="blog-post-meta">
                <time datetime="{{date format="YYYY-MM-DD"}}">Linked on {{date published_at}}</time>
                </span>
                {{else}}
                <h2 class="blog-post-title">{{title}}</h2>
                <div class="blog-post-excerpt">{{excerpt words="24"}}...</div>
                <span class="blog-post-meta">
                <time datetime="{{date format="YYYY-MM-DD"}}">Posted on {{date published_at}}</time>
                </span>
               {{/if}}
            </div>
        </a>
</div>