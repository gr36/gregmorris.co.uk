<!-- Social Graph Stuff -->
<meta property="og:site_name" content="{{@blog.title}}" />
<meta property="og:type" content="article" />
<meta property="og:title" content="{{title}}" /> 
<meta property="og:description" content="{{meta_description}}..." />
<meta property="og:url" content="{{url}}" />
<meta property="og:image" content="{{image}}" />
<meta property="article:published_time" content="{{date format='YYYY-MM-DDTHH:mm:ssZ'}}" />
<meta property="article:modified_time" content="{{date updated_at format='YYYY-MM-DDTHH:mm:ssZ'}}" />
{{#foreach tags}}
  <meta property="article:tag" content="{{name}}" />
{{/foreach}}
<!-- Indie Web Stuff -->

<!-- Twitter Stuff -->
<meta name="twitter:card" content="summary" />
<meta name="twitter:title" content="{{title}}" />
<meta name="twitter:description" content="{{meta_description}}" /> 
<meta name="twitter:url" content="{{url absolute='true'}}" />
<meta name="twitter:image:src" content="{{image}}" />

<!-- Ghost Stuff -->
<meta name="generator" content="Ghost 4.25" />
<link rel="alternate" type="application/rss+xml" title="{{@blog.title}}" href="{{url}}/rss/" />
<script async src="/public/cards.min.js?v=44c4498c78"></script><style>:root {--ghost-accent-color: #FF1A75;}</style>
<link rel="stylesheet" type="text/css" href="/public/cards.min.css?v=44c4498c78">
<meta name="description" content="{{meta_description}}" />
<link rel="icon" href="/favicon.png" type="image/png" />
<link rel="canonical" href="{{url absolute='true'}}" />
<meta name="referrer" content="no-referrer-when-downgrade" />
<link rel="next" href="{{url}}/page/2/" />

<!-- Structured Data -->
<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "publisher": {
        "@type": "Organization",
        "name": "{{meta_title}}",
        "url": "{{url}}",
        "logo": {
            "@type": "ImageObject",
            "url": "{{url}}/favicon.png",
            "width": 60,
            "height": 60
        }
    },
  "headline": "{{title}}",
  "url": "{{url}}",
  "image": {
        "@type": "ImageObject",
        "url": "https://static.ghost.org/v4.0.0/images/publication-cover.jpg",
        "width": 7183,
        "height": 2885
    },
    "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{url}}"
    },
  "datePublished": "{{date format='YYYY-MM-DDTHH:mm:ssZ'}}",
  "dateModified": "{{date updated_at format='YYYY-MM-DDTHH:mm:ssZ'}}",
  "keywords": "{{tags}}",
  "description": "{{meta_description}}"
}
</script>
