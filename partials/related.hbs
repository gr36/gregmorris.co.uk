{{#get "posts" limit="8" filter="tags:[{{post.tags}}]+tags:-[link]+id:-{{post.id}}" as |related|}}
    {{#if related}}
        <section class="related-posts">
            <div class="container">
                <h3 class="related-title">You Might Also Like...</h3>
                <div class="post-feed">
                    {{#foreach posts}}
                        <div class="grid-item grid-sizer"></div>
                        {{> "loop"}}
                    {{/foreach}}
                </div>
            </div>
        </section>
    {{/if}}
{{/get}}