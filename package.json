{
    "name": "greg-morris",
    "description": "The them used on gregmorris blog",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=4.0.0",
        "ghost-api": "v4"
    },
    "license": "MIT",
    "author": {
        "name": "Greg Morris",
        "email": "hello@gregmorris.co.uk",
        "url": "https://gregmorris.co.uk"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "gpm": {
        "type": "theme",
        "categories": [
            "minimal",
            "blog",
            "linkposts"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/gr36/gregmorris.co.uk.git"
    },
    "screenshots": {
        "desktop": "{{asset screenshot-desktop.png}}",
        "mobile": "{{asset screenshot-mobile.jpg}}"
    },
    "config": {
        "posts_per_page": 10,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 750
            },
            "l": {
                "width": 1140
            },
            "xl": {
                "width": 1920
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "lint": "gulp lint",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "autoprefixer": "10.4.0",
        "beeper": "2.1.0",
        "cssnano": "5.0.9",
        "gscan": "4.10.0",
        "gulp": "4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-stylelint": "13.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "postcss": "8.3.11",
        "postcss-easy-import": "3.0.0",
        "pump": "3.0.0",
        "stylelint": "14.0.1",
        "stylelint-config-standard": "23.0.0",
        "stylelint-order": "5.0.0"
    },
    "dependencies": {
        "tailwindcss": "^2.2.19"
    }
}
