{{!< default}}

<div class="content-area">
    <main class="site-main">
        {{#post}}
            <article class="{{post_class}} single">
                <script async type="text/javascript" src="//cdn.carbonads.com/carbon.js?serve=CESI5KJI&placement=gregmorriscouk" id="_carbonads_js"></script>
                <header class="post-header container large">
                    <h1 class="post-title">{{title}}</h1>
                </header>
                {{#if custom_excerpt}}
                    <div class="post-excerpt container medium">{{custom_excerpt}}</div>
                {{/if}}
                {{#if feature_image}}
                    <figure class="post-media hero-container">
                        <img class="hero-image" srcset="{{> srcset}}"
                            sizes="(min-width: 1170px) 1140px, (min-width: 780px) 750px, calc(100vw - 30px)"
                            src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">

                        {{#if feature_image_caption}}
                            <figcaption>{{feature_image_caption}}</figcaption>
                        {{/if}}
                    </figure>
                {{/if}}
                <div class="post-content kg-canvas u-text-format">
                    {{content}}
                {{#is "post"}}
                <span class="blog-post-meta">
                    {{#if canonical_url}}
                        <time datetime="{{date format="YYYY-MM-DD"}}">Linked on {{date published_at}}</time><a href="{{url}}">  &#9733;</a>
                    {{else}}
                    <time datetime="{{date format="YYYY-MM-DD"}}">Posted on {{date published_at}}</time>
                    {{/if}}
                </span>
                {{/is}}
                </div>
            </article>
        {{/post}}
        {{#has tag="howto"}}
        <div class="buy-coffee">
            If this post helped, consider buying me a Coffe to say thanks
            <a href='https://ko-fi.com/T6T3734AI' target='_blank'><img style='border:0px;height:auto;width:30%%;display:block;margin-left:auto;margin-right:auto;' 
            src='https://cdn.ko-fi.com/cdn/kofi2.png?v=3' 
            border='0' alt='Buy Me a Coffee at ko-fi.com' /></a>
        </div>
        {{/has}}
        {{> blog_related}}
    </main>
</div>